{
  "manifest_version": 2,

  "name": "Blockr",
  "description": "Block distracting websites",
  "version": "0.0.1",
  "background": {
    "page": "app/background.html"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "options_page": "index.html",
  "content_security_policy": "script-src 'self' 'sha256-wuZ36RTz3eIAef210FpU+6IC8p5XlNe21ma4wd+RwsM='; object-src 'self'",
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "storage",
		"idle",
    "<all_urls>",
    "tabs"
  ]
}
